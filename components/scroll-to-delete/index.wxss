/**index.wxss**/

.box {
  width: 100%;
  height: 150rpx;
  position: relative;
}

.scroll-view_H {
  width: 100%;
  height: 100%;
  display: block;
  white-space: nowrap;
}

.item {
  width: 100%;
  height: 100%;
  display: inline-block;
  background-color: #AAA;
}

.holder {
  width: 150rpx;
  height: 100%;
  display: inline-block;
  opacity: 0;
}

.delete {
  width: 150rpx;
  height: 100%;
  line-height: 150rpx;
  text-align: center;
  background-color: red;
  color: #FFFFFF;
  position: absolute;
  top: 0;
  right: 0;
  z-index: -1;
}